# Maintainer: Chris Fordham <chris at fordham-nagy dot id dot au> aka flaccid
# Package Source: https://github.com/flaccid/archlinux-packages/blob/master/chef-zero/PKGBUILD

# Note: Chef (the company) is behind with moneta version support.
# Install ruby-moneta from https://github.com/flaccid/archlinux-packages/blob/master/ruby-moneta/PKGBUILD

_gemname=chef-zero
pkgname=$_gemname
pkgver=1.7.1
pkgrel=2
pkgdesc="Self-contained, easy-setup, fast-start in-memory Chef server for testing and solo setup purposes."
arch=(any)
url="https://github.com/jkeiser/chef-zero"
license=('Apache 2.0')
depends=(
  'ruby'
  'ruby-hashie>=2.0.0'
  'ruby-mixlib-log>=1.3'
  'ruby-moneta<0.7.0'
  'ruby-rack'
)
makedepends=(rubygems)
source=(http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('b21c53851096465911be2f7a7628f213')

package() {
  cd "$srcdir"

  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" "$_gemname-$pkgver.gem"
}

# vim:set ts=2 sw=2 et:
