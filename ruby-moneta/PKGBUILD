# Maintainer: Chris Fordham <chris at fordham-nagy dot id dot au> aka flaccid
# Package Source: https://github.com/flaccid/archlinux-packages/blob/master/ruby-moneta/PKGBUILD

_gemname=moneta
pkgname="ruby-$_gemname"
pkgver=0.6.0
pkgrel=1
pkgdesc="A unified interface to key/value stores. This is version 0.6.0 required by chef in AUR."
arch=(any)
url="http://github.com/minad/moneta"
license=('custom')
depends=(ruby)
makedepends=(rubygems)
source=(http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('20b115b6feb9d0161b879ad37bf12110')

package() {
  cd "$srcdir"

  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" "$_gemname-$pkgver.gem"
}

# vim:set ts=2 sw=2 et:
