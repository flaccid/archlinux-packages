# Maintainer: Chris Fordham <chris at fordham-nagy dot id dot au> aka flaccid
# Contributor: Anatol Pomozov <anatol.pomozov@gmail.com>

_gemname=ridley
pkgname=ruby-$_gemname
pkgver=4.1.0
pkgrel=1
pkgdesc='A reliable Chef API client with a clean syntax'
arch=(any)
url='https://github.com/RiotGames/ridley'
license=('Apache 2.0')
depends=(ruby ruby-addressable ruby-varia_model ruby-buff-config ruby-buff-extensions ruby-buff-ignore ruby-buff-shell_out ruby-celluloid ruby-celluloid-io ruby-erubis ruby-faraday ruby-hashie-2 ruby-json ruby-mixlib-authentication ruby-net-http-persistent ruby-retryable ruby-semverse)
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
sha1sums=('9116e8da2370958fedec01d7eaa3bbcdfc6bc0a1')

package() {
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

# vim:set ts=2 sw=2 et:
